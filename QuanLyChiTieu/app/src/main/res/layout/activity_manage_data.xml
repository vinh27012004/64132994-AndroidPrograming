<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ManageDataActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter category name to delete"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_delete_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Category" />

        <EditText
            android:id="@+id/et_transaction_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter transaction ID to delete"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_delete_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Transaction" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>